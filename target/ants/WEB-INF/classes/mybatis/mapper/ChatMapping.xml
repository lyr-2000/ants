<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ants.dao.ChatDao">

    <select id="userQuery" resultType="com.ants.entity.ChatUserBase">
        select * from ants_user_base where studentId =#{id}
    </select>

    <select id="queryContactor" resultType="com.ants.entity.ChatUtil">
       select * from ants_chat_user where studentId =#{studentId} and contactor=#{contactor}
    </select>

    <insert id="insertcontactor" parameterType="com.ants.entity.ChatUtil">
        insert into ants_chat_user (studentId,contactor,contactorName) values (#{studentId},#{contactor},#{contactorName})
    </insert>

    <select id="queryAllContactor" resultType="com.ants.entity.ChatContactor">
       select contactor , contactorName ,information from ants_chat_user where studentId = #{id}
    </select>

    <select id="queryInformation" resultType="String">
       select information from ants_chat_user where studentId = #{studentId} and contactor = #{contactor}
    </select>

</mapper>