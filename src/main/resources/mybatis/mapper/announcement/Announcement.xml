<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ants.dao.announcement.AnnouncementDao">
    <!--获取一条最新的公告的数据信息-->
    <select id="latestAnnouncement" parameterType="Map" resultType="com.ants.entity.announcement.Announcement">
        SELECT annId,annTitle,annContent,annTime
              FROM ants_management_announcement
                  ORDER BY annTime
                      DESC limit #{head},#{tail}
    </select>

    <!--根据页面数获取公告列表的数据-->
    <select id="getAnnouncementList" parameterType="Map" resultType="com.ants.entity.announcement.Announcement">
        SELECT annId,annTitle,annTime
              FROM ants_management_announcement
                  LIMIT #{head},#{tail}
    </select>

    <!--根据公告的id获取此公告的详细信息-->
    <select id="getAnnDetail" parameterType="Integer" resultType="com.ants.entity.announcement.Announcement">
        SELECT annId,annTitle,annContent,annTime
              FROM ants_management_announcement
                  WHERE annId = #{annId}
    </select>

</mapper>